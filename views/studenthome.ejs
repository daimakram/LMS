<%-include("partials/header");-%>
<%-include("partials/navbar");-%>

    <body class="mainpage">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <h1>Welcome to LMS (Student)</h1>
        <section>
            <% Object.keys(courses).forEach(function(x){ %>
                <h1 style="text-align:center">
                    Year <%=x%>
                </h1>
                <% Object.keys(courses[x]).forEach(function(y){ %>
                    <section>
                        <h2 class="section-title"><%=y%></h2>
                        
                    </section>
                    <!-- do another object.keys to access each semester of each year-->
                    <% Object.keys(courses[x][y]).forEach(function(z){ %>
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <div class="card-header">
                                    <h3>Course: <%=courses[x][y][z].name%></h3>
                                  </div>
                                  <div class="card-body">
                                    <h4>Course ID: <%=JSON.stringify(courses[x][y][z].course_id)%></h4>
                                    <form action="/studenthome" method="GET">
                                        <div>
                            
                                            <button type="submit" name="button" formaction='/viewAnnouncements/<%=courses[x][y][z].course_id%>/<%=x%>/<%=y%>' style="margin: 8px; height: 35px;">Announcements</button>
        
                                        </div>
                                        <br> 
                                        <div>
                                            <button type="submit" name="button" formaction='/assignmentsTab/<%=courses[x][y][z].course_id%>/<%=x%>/<%=y%>' style="margin: 8px; height: 35px;">Assignments</button>                                        
                                        </div>
                                        <br>
                                        <div>
                                            <button type="submit" name="button" formaction='/viewFeedback/<%=courses[x][y][z].course_id%>/<%=x%>/<%=y%>' style="margin: 8px; height: 35px;">Feedback</button>                                        
                                        </div>
                                        <br>
                                        <div>
                                            <button type="submit" name="button" formaction='/viewResources/<%=courses[x][y][z].course_id%>/<%=x%>/<%=y%>' style="margin: 8px; height: 35px;">Resources</button>                                        
                                        </div>
                                        <br>  
                                        <div>
                                            <button type="submit" name="button" formaction='/viewRoster/<%=courses[x][y][z].course_id%>/<%=x%>/<%=y%>' style="margin: 8px; height: 35px;">Roster</button>                                        
                                        </div>
                                        <br>
                    
                                        
                                    </form>
                                    <!-- <button class="btn btn-lg btn-block btn-outline-dark" type="button">Sign Up</button> -->
                                  </div>
            
                            </div>
                        </div>
                    <% }); %>

                    <h1 style="text-align:center">
                        <!-- <%=JSON.stringify(courses[x][y])%> -->
                    </h1>
                    </section>
                    <br>
                    <% }); %>
            <% }); %>
        </section>
        
        <!-- <<script src="/js/index.js"></script> -->
    </body>

    </html>
